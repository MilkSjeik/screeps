{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "screeps/screeps": true
    },
    "extends": "eslint:recommended",
    "plugins": [
          "screeps"
    ],
    "parserOptions": {
        "ecmaVersion": 13
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
